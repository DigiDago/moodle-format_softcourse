{{!
    @template format_softcourse/templates/sections

    Block template for softcourse sections

    This template is used to generate a basic display for the softcourse sections list.

    Classes required for JS:
    * none

    Context variables required for this template:
    * initialsection object section
    * sections object of section
        * skip bool
}}

<div id="softcourse-sections">
    <ul id="softcourse-tabs">
        {{$ initialsection }}
            {{#initialsection}}
                {{> format_softcourse/section }}
            {{/initialsection}}
        {{/ initialsection}}
        {{$ sections }}
            {{# sections}}
                {{^skip}}
                    {{> format_softcourse/section }}
                {{/skip}}
            {{/sections}}
        {{/ sections}}
    </ul>
</div>
